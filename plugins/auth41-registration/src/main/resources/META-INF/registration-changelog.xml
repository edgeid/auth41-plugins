<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="auth41-registration-1.0.0" author="auth41">
        <!-- Create invite tokens table -->
        <createTable tableName="auth41_invite_tokens">
            <column name="invite_token" type="VARCHAR(255)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="ip_address" type="VARCHAR(45)">
                <constraints nullable="false"/>
            </column>
            <column name="realm_id" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="expires_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="used_at" type="TIMESTAMP"/>
            <column name="used" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- Index for rate limiting queries (by IP and creation time) -->
        <createIndex tableName="auth41_invite_tokens" indexName="idx_ip_created">
            <column name="ip_address"/>
            <column name="created_at"/>
        </createIndex>

        <!-- Create registration requests table -->
        <createTable tableName="auth41_registration_requests">
            <column name="request_id" type="VARCHAR(255)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="realm_id" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="attributes" type="TEXT"/>
            <column name="status" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="approved_at" type="TIMESTAMP"/>
            <column name="expires_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="VARCHAR(255)"/>
        </createTable>

        <!-- Index for approval processor queries (by status and creation time) -->
        <createIndex tableName="auth41_registration_requests" indexName="idx_status_created">
            <column name="status"/>
            <column name="created_at"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
